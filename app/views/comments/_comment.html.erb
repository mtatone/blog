<h2>
  <%= @post.comments.count %>
  Comments
</h2>
<% @post.comments.each do |comment| %>
  <div class="comment_wraper">
    <h4 class="name"><%= comment.name %> </h4>
    <%= comment.body %>
    <p class="date"> Created about <%= time_ago_in_words(comment.created_at)%> </p>

    <%= link_to 'Delete',[@post, comment], method: :delete, data: {confirm: 'Are you sure?'}, class: "btn"%>
  </div>
<% end  %>