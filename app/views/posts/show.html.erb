<div id="page_wrapper">
  <h1 class="title"> 
    <%= @post.title  %>
  </h1>

  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> Ago
  </p>

  <p class "body">
    <%= @post.body %>
  </p>
</div>

<div id="buttons">
  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
  <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
</div>

